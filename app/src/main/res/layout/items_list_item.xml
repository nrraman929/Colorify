<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/list_item_spacer_top"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_caption"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/list_item_likes"
        android:layout_below="@+id/list_item_spacer_top"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_tag"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_likes"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_item_spacer_top"/>
    <ImageView
        android:contentDescription="@string/content_description"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:id="@+id/list_item_image"
        android:layout_below="@+id/list_item_caption"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/list_item_spacer_bottom"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/list_item_image"/>

</RelativeLayout>